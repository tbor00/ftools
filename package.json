{
    "name": "@ftools-suit/root",
    "version": "1.0.0",
    "description": "SUIT (simple user interface tools)",
    "main": "index.js",
    "engines": {
        "node": ">=17",
        "npm": ">=7"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "format:all": "prettier --write ./packages/**/*",
        "lib:all": "npm run lib --workspaces",
        "lib:utils": "npm run lib --workspace=@ftools/suit-utils",
        "lib:domain": "npm run lib --workspace=@ftools/suit-domain",
        "lib:router": "npm run lib --workspace=@ftools/suit-router"
    },
    "author": "@tbor00",
    "license": "MIT license",
    "repository": {
        "type": "git",
        "url": "https://github.com/tbor00/ftools"
    },
    "devDependencies": {
        "@babel/cli": "^7.18.10",
        "babel-preset-sui": "^3.49.0",
        "prettier": "^2.7.1"
    },
    "babel": {
        "presets": [
            "sui"
        ]
    }
}
